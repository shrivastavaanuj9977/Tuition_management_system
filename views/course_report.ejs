<% var pageTitle="" ; %>
    <% include partials/header %>

    

    <!-- Main Content -->
    <div class="container">
        <div class="page-header">
            <h1 class="page-title">
                <i class="fas fa-book"></i>
                Courses Report
            </h1>
            <div class="action-buttons">
                <button class="btn btn-print" onclick="window.print()">
                    <i class="fas fa-print"></i> Print
                </button>
                <button class="btn btn-export" onclick="exportToCSV()">
                    <i class="fas fa-download"></i> Export CSV
                </button>
            </div>
        </div>

        <!-- Filters -->
        <div class="filter-card">
            <h3 class="filter-title">
                <i class="fas fa-filter"></i>
                Filter Report
            </h3>
            <form id="filterForm" method="GET" action="/reports/course">
                <div class="filter-grid">
                    <div class="form-group">
                        <label for="status">Status</label>
                        <select id="status" name="status">
                            <option value="">-- All --</option>
                            <option value="Active" <%=filterStatus==='Active' ? 'selected' : '' %>>Active</option>
                            <option value="Inactive" <%=filterStatus==='Inactive' ? 'selected' : '' %>>Inactive</option>
                            <option value="Completed" <%=filterStatus==='Completed' ? 'selected' : '' %>>Completed
                            </option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="sortBy">Sort By</label>
                        <select id="sortBy" name="sortBy">
                            <option value="name" <%=sortBy==='name' ? 'selected' : '' %>>Course Name</option>
                            <option value="fee" <%=sortBy==='fee' ? 'selected' : '' %>>Fee</option>
                            <option value="duration" <%=sortBy==='duration' ? 'selected' : '' %>>Duration</option>
                            <option value="id" <%=sortBy==='id' ? 'selected' : '' %>>ID</option>
                        </select>
                    </div>

                    <div class="filter-buttons" style="grid-column: span 1;">
                        <button type="submit" class="btn-filter">
                            <i class="fas fa-search"></i> Apply Filter
                        </button>
                        <a href="/reports/course" class="btn-reset"
                            style="display: inline-flex; align-items: center; justify-content: center; text-decoration: none;">
                            <i class="fas fa-redo"></i> Reset
                        </a>
                    </div>
                </div>
            </form>
        </div>

        <!-- Statistics -->
        <div class="stats-grid">
            <div class="stat-card">
                <div class="stat-label"><i class="fas fa-list"></i> Total Courses</div>
                <div class="stat-value">
                    <%= totalCourses %>
                </div>
            </div>
            <div class="stat-card active">
                <div class="stat-label"><i class="fas fa-play-circle"></i> Active Courses</div>
                <div class="stat-value">
                    <%= activeCourses %>
                </div>
            </div>
            <div class="stat-card">
                <div class="stat-label"><i class="fas fa-coins"></i> Avg Fee</div>
                <div class="stat-value">₹<%= averageFee %>
                </div>
            </div>
        </div>

        <!-- Report Table -->
        <div class="report-card">
            <div class="report-header">
                <span class="report-title">Courses Details Report</span>
                <span class="report-count">
                    <%= courses.length %> records
                </span>
            </div>

            <% if (courses && courses.length> 0) { %>
                <table>
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Course ID</th>
                            <th>Course Name</th>
                            <th>Code</th>
                            <th>Teacher Name</th>
                            <th>Duration</th>
                            <th>Fee</th>
                            <th>Max Students</th>
                            <th>Status</th>
                            <th>Start Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% courses.forEach((course, index)=> { %>
                            <tr>
                                <td>
                                    <%= index + 1 %>
                                </td>
                                <td class="course-id">#<%= course.id %>
                                </td>
                                <td class="course-name">
                                    <%= course.course_name %>
                                </td>
                                <td><strong>
                                        <%= course.course_code %>
                                    </strong></td>
                                <td>
                                    <%= course.teacher_name || '-' %>
                                </td>
                                <td>
                                    <%= course.duration %>
                                </td>
                                <td class="fee">₹<%= parseFloat(course.fee).toFixed(2) %>
                                </td>
                                <td>
                                    <%= course.max_students %>
                                </td>
                                <td>
                                    <span class="badge <%= 'badge-' + course.status.toLowerCase() %>">
                                        <%= course.status %>
                                    </span>
                                </td>
                                <td>
                                    <%= new Date(course.start_date).toLocaleDateString() %>
                                </td>
                            </tr>
                            <% }); %>
                    </tbody>
                </table>
                <% } else { %>
                    <div class="no-data">
                        <i class="fas fa-inbox"></i>
                        <p>No course records found</p>
                    </div>
                    <% } %>
        </div>
    </div>

    <script>
        function exportToCSV() {
            const table = document.querySelector('table');
            if (!table) {
                alert('No data to export');
                return;
            }

            let csv = [];
            let rows = table.querySelectorAll('tr');

            for (let i = 0; i < rows.length; i++) {
                let row = [], cols = rows[i].querySelectorAll('td, th');

                for (let j = 0; j < cols.length; j++) {
                    let text = cols[j].innerText;
                    text = text.replace(/"/g, '""');
                    row.push('"' + text + '"');
                }

                csv.push(row.join(','));
            }

            let csvFile = new Blob([csv.join('\n')], { type: 'text/csv' });
            let csvUrl = URL.createObjectURL(csvFile);
            let link = document.createElement('a');
            link.href = csvUrl;
            link.download = 'course_report_' + new Date().getTime() + '.csv';
            link.click();
        }
    </script>
   <% include partials/footer %>