<% var pageTitle="" ; %>
    <% include partials/header %>


    <!-- Main Content -->
    <div class="container">
        <div class="page-header">
            <h1 class="page-title">
                <i class="fas fa-file-chart-line"></i>
                Student Report
            </h1>
            <div class="action-buttons">
                <button class="btn btn-print" onclick="window.print()">
                    <i class="fas fa-print"></i> Print
                </button>
                <button class="btn btn-export" onclick="exportToCSV()">
                    <i class="fas fa-download"></i> Export CSV
                </button>
            </div>
        </div>

        <!-- Filters -->
        <div class="filter-card">
            <h3 class="filter-title">
                <i class="fas fa-filter"></i>
                Filter Report
            </h3>
            <form id="filterForm" method="GET" action="/reports/student">
                <div class="filter-grid">
                    <div class="form-group">
                        <label for="class">Class</label>
                        <input type="text" id="class" name="class" placeholder="e.g., 10A"
                            value="<%= typeof filterClass !== 'undefined' ? filterClass : '' %>">
                    </div>

                    <div class="form-group">
                        <label for="gender">Gender</label>
                        <select id="gender" name="gender">
                            <option value="">-- All --</option>
                            <option value="Male" <%=filterGender==='Male' ? 'selected' : '' %>>Male</option>
                            <option value="Female" <%=filterGender==='Female' ? 'selected' : '' %>>Female</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="sortBy">Sort By</label>
                        <select id="sortBy" name="sortBy">
                            <option value="name" <%=sortBy==='name' ? 'selected' : '' %>>Student Name</option>
                            <option value="class" <%=sortBy==='class' ? 'selected' : '' %>>Class</option>
                            <option value="phone" <%=sortBy==='phone' ? 'selected' : '' %>>Phone</option>
                            <option value="id" <%=sortBy==='id' ? 'selected' : '' %>>ID</option>
                        </select>
                    </div>

                    <div class="filter-buttons" style="grid-column: span 1;">
                        <button type="submit" class="btn-filter">
                            <i class="fas fa-search"></i> Apply Filter
                        </button>
                        <a href="/reports/student" class="btn-reset"
                            style="display: inline-flex; align-items: center; justify-content: center; text-decoration: none;">
                            <i class="fas fa-redo"></i> Reset
                        </a>
                    </div>
                </div>
            </form>
        </div>

        <!-- Statistics -->
        <div class="stats-grid">
            <div class="stat-card">
                <div class="stat-label"><i class="fas fa-users"></i> Total Students</div>
                <div class="stat-value">
                    <%= totalStudents %>
                </div>
            </div>
            <div class="stat-card male">
                <div class="stat-label"><i class="fas fa-mars"></i> Male Students</div>
                <div class="stat-value">
                    <%= maleCount %>
                </div>
            </div>
            <div class="stat-card female">
                <div class="stat-label"><i class="fas fa-venus"></i> Female Students</div>
                <div class="stat-value">
                    <%= femaleCount %>
                </div>
            </div>
            <div class="stat-card">
                <div class="stat-label"><i class="fas fa-book"></i> Classes</div>
                <div class="stat-value">
                    <%= uniqueClasses %>
                </div>
            </div>
        </div>

        <!-- Report Table -->
        <div class="report-card">
            <div class="report-header">
                <span class="report-title">Student Details Report</span>
                <span class="report-count">
                    <%= students.length %> records
                </span>
            </div>

            <% if (students && students.length> 0) { %>
                <table>
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Student ID</th>
                            <th>Student Name</th>
                            <th>Class</th>
                            <th>Father Name</th>
                            <th>Mother Name</th>
                            <th>Date of Birth</th>
                            <th>Gender</th>
                            <th>Phone</th>
                            <th>Email</th>
                            <th>Address</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% students.forEach((student, index)=> { %>
                            <tr>
                                <td>
                                    <%= index + 1 %>
                                </td>
                                <td class="student-id">#<%= student.id %>
                                </td>
                                <td class="student-name">
                                    <%= student.name %>
                                </td>
                                <td><strong>
                                        <%= student.class %>
                                    </strong></td>
                                <td>
                                    <%= student.father || '-' %>
                                </td>
                                <td>
                                    <%= student.mother || '-' %>
                                </td>
                                <td>
                                    <%= student.dob ? new Date(student.dob).toLocaleDateString() : '-' %>
                                </td>
                                <td>
                                    <span
                                        class="badge <%= 'badge-' + (student.gender ? student.gender.toLowerCase() : 'male') %>">
                                        <%= student.gender || '-' %>
                                    </span>
                                </td>
                                <td>
                                    <%= student.phone %>
                                </td>
                                <td>
                                    <%= student.email || '-' %>
                                </td>
                                <td>
                                    <%= student.address || '-' %>
                                </td>
                            </tr>
                            <% }); %>
                    </tbody>
                </table>
                <% } else { %>
                    <div class="no-data">
                        <i class="fas fa-inbox"></i>
                        <p>No student records found</p>
                    </div>
                    <% } %>
        </div>
    </div>

    <script>
        function exportToCSV() {
            const table = document.querySelector('table');
            if (!table) {
                alert('No data to export');
                return;
            }

            let csv = [];
            let rows = table.querySelectorAll('tr');

            for (let i = 0; i < rows.length; i++) {
                let row = [], cols = rows[i].querySelectorAll('td, th');

                for (let j = 0; j < cols.length; j++) {
                    let text = cols[j].innerText;
                    text = text.replace(/"/g, '""');
                    row.push('"' + text + '"');
                }

                csv.push(row.join(','));
            }

            let csvFile = new Blob([csv.join('\n')], { type: 'text/csv' });
            let csvUrl = URL.createObjectURL(csvFile);
            let link = document.createElement('a');
            link.href = csvUrl;
            link.download = 'student_report_' + new Date().getTime() + '.csv';
            link.click();
        }
    </script>
     <% include partials/footer %>
