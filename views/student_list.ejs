<% var pageTitle = "Students"; %>
<% include partials/header %>

<div class="container">
    <div class="card">
        <div class="card-header">
            <a href="/students/add" class="btn-add">+ Add New Student</a>
        </div>

        <div class="card-body">
            <section class="main-section">
                <h1 class="page-title">Student List</h1>

                <% if (Array.isArray(students) && students.length) { %>
                    <table class="table student-table">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Class</th>
                                <th>Phone</th>
                                <th>Action</th>
                            </tr>
                        </thead>

                        <tbody>
                            <% students.forEach(function(s){ %>
                                <tr>
                                    <td><%= s.id %></td>
                                    <td><%= s.name %></td>
                                    <td><%= s.class %></td>
                                    <td><%= s.phone %></td>
                                    <td>
                                        <a class="action-btn btn-edit" href="/students/edit/<%= s.id %>">Edit</a>
                                        <a class="action-btn btn-delete" 
                                           href="/students/delete/<%= s.id %>"
                                           onclick="return confirm('Delete this student?');">
                                           Delete
                                        </a>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>

                <% } else { %>
                    <div class="no-data">No students found.</div>
                <% } %>

            </section>
        </div>
    </div>
</div>

<% include partials/footer %>
