<% var pageTitle="" ; %>
    <% include partials/header %>


    <!-- Main Content -->
    <div class="container">
        <div class="page-header">
            <h1 class="page-title">
                <i class="fas fa-receipt"></i>
                Payment Report
            </h1>
            <div class="action-buttons">
                <button class="btn btn-print" onclick="window.print()">
                    <i class="fas fa-print"></i> Print
                </button>
                <button class="btn btn-export" onclick="exportToCSV()">
                    <i class="fas fa-download"></i> Export CSV
                </button>
            </div>
        </div>

        <!-- Filters -->
        <div class="filter-card">
            <h3 class="filter-title">
                <i class="fas fa-filter"></i>
                Filter Report
            </h3>
            <form id="filterForm" method="GET" action="/reports/payment">
                <div class="filter-grid">
                    <div class="form-group">
                        <label for="status">Status</label>
                        <select id="status" name="status">
                            <option value="">-- All --</option>
                            <option value="Paid" <%=filterStatus==='Paid' ? 'selected' : '' %>>Paid</option>
                            <option value="Pending" <%=filterStatus==='Pending' ? 'selected' : '' %>>Pending</option>
                            <option value="Failed" <%=filterStatus==='Failed' ? 'selected' : '' %>>Failed</option>
                            <option value="Refunded" <%=filterStatus==='Refunded' ? 'selected' : '' %>>Refunded</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="method">Payment Method</label>
                        <select id="method" name="method">
                            <option value="">-- All --</option>
                            <option value="Cash" <%=filterMethod==='Cash' ? 'selected' : '' %>>Cash</option>
                            <option value="Bank Transfer" <%=filterMethod==='Bank Transfer' ? 'selected' : '' %>>Bank
                                Transfer</option>
                            <option value="Credit Card" <%=filterMethod==='Credit Card' ? 'selected' : '' %>>Credit Card
                            </option>
                            <option value="Debit Card" <%=filterMethod==='Debit Card' ? 'selected' : '' %>>Debit Card
                            </option>
                            <option value="UPI" <%=filterMethod==='UPI' ? 'selected' : '' %>>UPI</option>
                            <option value="Check" <%=filterMethod==='Check' ? 'selected' : '' %>>Check</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="sortBy">Sort By</label>
                        <select id="sortBy" name="sortBy">
                            <option value="date" <%=sortBy==='date' ? 'selected' : '' %>>Date</option>
                            <option value="amount" <%=sortBy==='amount' ? 'selected' : '' %>>Amount</option>
                            <option value="student" <%=sortBy==='student' ? 'selected' : '' %>>Student Name</option>
                            <option value="id" <%=sortBy==='id' ? 'selected' : '' %>>ID</option>
                        </select>
                    </div>

                    <div class="filter-buttons" style="grid-column: span 1;">
                        <button type="submit" class="btn-filter">
                            <i class="fas fa-search"></i> Apply Filter
                        </button>
                        <a href="/reports/payment" class="btn-reset"
                            style="display: inline-flex; align-items: center; justify-content: center; text-decoration: none;">
                            <i class="fas fa-redo"></i> Reset
                        </a>
                    </div>
                </div>
            </form>
        </div>

        <!-- Statistics -->
        <div class="stats-grid">
            <div class="stat-card">
                <div class="stat-label"><i class="fas fa-list"></i> Total Payments</div>
                <div class="stat-value">
                    <%= totalPayments %>
                </div>
            </div>
            <div class="stat-card paid">
                <div class="stat-label"><i class="fas fa-check-circle"></i> Paid</div>
                <div class="stat-value">
                    <%= paidCount %>
                </div>
            </div>
            <div class="stat-card pending">
                <div class="stat-label"><i class="fas fa-hourglass-half"></i> Pending</div>
                <div class="stat-value">
                    <%= pendingCount %>
                </div>
            </div>
            <div class="stat-card">
                <div class="stat-label"><i class="fas fa-coins"></i> Total Revenue</div>
                <div class="stat-value">₹<%= totalRevenue %>
                </div>
            </div>
        </div>

        <!-- Report Table -->
        <div class="report-card">
            <div class="report-header">
                <span class="report-title">Payment Details Report</span>
                <span class="report-count">
                    <%= payments.length %> records
                </span>
            </div>

            <% if (payments && payments.length> 0) { %>
                <table>
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Payment ID</th>
                            <th>Student Name</th>
                            <th>Amount</th>
                            <th>Payment Date</th>
                            <th>Status</th>
                            <th>Payment Method</th>
                            <th>Reference No.</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% payments.forEach((payment, index)=> { %>
                            <tr>
                                <td>
                                    <%= index + 1 %>
                                </td>
                                <td class="payment-id">#<%= payment.id %>
                                </td>
                                <td><strong>
                                        <%= payment.student_name || 'N/A' %>
                                    </strong></td>
                                <td class="amount">₹<%= payment.amount !=null ? parseFloat(payment.amount).toFixed(2)
                                        : '0.00' %>
                                </td>
                                <td>
                                    <%= payment.payment_date ? new Date(payment.payment_date).toLocaleDateString() : '-'
                                        %>
                                </td>
                                <td>
                                    <span
                                        class="badge <%= 'badge-' + (payment.status ? payment.status.toLowerCase() : 'unknown') %>">
                                        <%= payment.status || 'Unknown' %>
                                    </span>
                                </td>
                                <td>
                                    <%= payment.payment_method || '-' %>
                                </td>
                                <td>
                                    <%= payment.reference_no || '-' %>
                                </td>
                            </tr>
                            <% }); %>
                    </tbody>
                </table>
                <% } else { %>
                    <div class="no-data">
                        <i class="fas fa-inbox"></i>
                        <p>No payment records found</p>
                    </div>
                    <% } %>
        </div>
    </div>

    <script>
        function exportToCSV() {
            const table = document.querySelector('table');
            if (!table) {
                alert('No data to export');
                return;
            }

            let csv = [];
            let rows = table.querySelectorAll('tr');

            for (let i = 0; i < rows.length; i++) {
                let row = [], cols = rows[i].querySelectorAll('td, th');

                for (let j = 0; j < cols.length; j++) {
                    let text = cols[j].innerText;
                    text = text.replace(/"/g, '""');
                    row.push('"' + text + '"');
                }

                csv.push(row.join(','));
            }

            let csvFile = new Blob([csv.join('\n')], { type: 'text/csv' });
            let csvUrl = URL.createObjectURL(csvFile);
            let link = document.createElement('a');
            link.href = csvUrl;
            link.download = 'payment_report_' + new Date().getTime() + '.csv';
            link.click();
        }
    </script>

   <% include partials/footer %>